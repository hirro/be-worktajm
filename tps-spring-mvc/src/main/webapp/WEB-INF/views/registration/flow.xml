<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="registrationService.createRegistration()" result="flowScope.registration"  />
	</on-start>
	
	<!-- User information -->
	<view-state id="userInformationState" view="registration/user-information" model="registration">
		<binder>
			<binding property="email"/>
			<binding property="password"/>
			<binding property="passwordAgain"/>
		</binder>
		<transition on="proceed" to="sendChallengeState" validate="true"/>
		<transition on="cancel" to="cancelledState" validate="false" />
	</view-state>

	<action-state id="sendChallengeState">
		<evaluate expression="registrationService.sendChallenge(registration)" />
        <transition to="verifyAccountState" />
	</action-state>
	
	<!-- Account verification -->
	<view-state id="verifyAccountState" view="registration/account-verification" model="registration">
		<transition on="proceed" to="checkChallengeState">
		</transition>
		<transition on="cancel" to="cancelledState" validate="false" />
	</view-state>
	
	<decision-state id="checkChallengeState">
	  <if test="registrationService.verifyChallenge(registration)"
	      then="registerUserState"
	      else="verifyAccountState" />
	</decision-state>	
	
	<action-state id="registerUserState">
		<evaluate expression="registrationService.persist(registration)" />	
        <transition to="completeState" />
	</action-state>
	
	<!-- Registration canceled -->
	<view-state id="cancelledState" view="registration/cancelled">
		<transition on="restart" to="userInformationState" />
	</view-state>

	<!-- Success -->
	<end-state id="completeState" view="registration/complete" />

</flow>
