<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="registrationService.createRegistration()" result="flowScope.registration"  />
	</on-start>
	
	<!-- User information -->
	<view-state id="user-information-state" view="registration/user-information" model="registration">
		<binder>
			<binding property="email"/>
			<binding property="password"/>
		</binder>
		<transition on="proceed" to="account-verification-state">
			<evaluate expression="registrationService.sendChallenge(registration)" />
		</transition>
		<transition on="cancel" to="cancelled-state" />
	</view-state>

	<!-- Account verification -->
	<view-state id="account-verification-state" view="registration/account-verification" model="registration">
		<transition on="proceed" to="check-challenge-state">
		</transition>
		<transition on="cancel" to="cancelled-state" />
	</view-state>
	
	<decision-state id="check-challenge-state">
	  <if test="registrationService.verifyChallenge(registration)"
	      then="register-user"
	      else="account-verification-state" />
	</decision-state>	
	
	<action-state id="register-user">
		<evaluate expression="registrationService.persist(registration)" />	
        <transition to="complete-state" />
	</action-state>
	
	<!-- Registration canceled -->
	<view-state id="cancelled-state" view="registration/cancelled">
		<transition on="restart" to="user-information-state" />
	</view-state>

	<!-- Success -->
	<end-state id="complete-state" view="registration/complete" />

</flow>
