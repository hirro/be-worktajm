<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="registration" class="com.arnellconsulting.tps.webflow.Registration"  />
	
	<!-- A sample view state -->
    <view-state id="view-state-1" view="registration/view-state-1">
	 		<binder>
				<binding property="corporate_name" required="true" />
				<binding property="email" required="true" />
				<binding property="password" required="true" />
				<binding property="name" required="true" />
			</binder>
    	<transition on="success" to="view-state-2"/>
    	<transition on="cancel" to="end-state"/>
    </view-state>
    
    <view-state id="view-state-2" view="registration/view-state-2">
	 		<binder>
				<binding property="name" required="true" />
			</binder>
    	<transition on="cancel" to="end-state"/>
    	<transition on="back" to="view-state-1"/>
    </view-state>

    <!-- A sample end state -->
    <end-state id="end-state" view="registration/end-state"/>

</flow>
